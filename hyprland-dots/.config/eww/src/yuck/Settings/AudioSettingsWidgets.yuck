(defwidget VolumeSlider []
    (box :class "audio-slider-container" :orientation "v" :space-evenly "true"
        (box :orientation "v"
             :class "volume-slider"
             :valign "start"
            (scale :min 0
                   :max 101
                   :orientation "v"
                   :flipped true
                   :value v_audio-num
                   :onchange "/usr/share/eww/target/release/eww update v_audio-num={} & amixer set Master {}%"))))